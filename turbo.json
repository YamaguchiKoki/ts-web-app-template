{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".cache/tsbuildinfo.json", "dist/**"]
		},
		"//#format-and-lint": {
			"cache": false,
			"outputLogs": "new-only"
		},
		"//#format-and-lint:fix": {
			"cache": false,
			"outputLogs": "new-only"
		},
		"studio": {
			"cache": false,
			"persistent": true
		},
		"push": {
			"cache": false,
			"interactive": true
		},
		"clean": {
			"cache": false
		},
		"typecheck": {
			"cache": false
		}
	},
	"globalEnv": ["DATABASE_URL"],
	"globalPassThroughEnv": ["NODE_ENV"]
}
